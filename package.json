{
  "name": "typescript-nodejs-template",
  "version": "1.0.0",
  "description": "A simple template for typescript Node.js project",
  "main": "index.js",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test": "NODE_ENV=test jest --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "javascript-state-machine": "^3.1.0",
    "nanoid": "^3.3.1",
    "random": "^3.0.6",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@types/jest": "^27.4.1",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^17.0.21",
    "@types/node-fetch": "^2.6.1",
    "@types/supertest": "^2.0.11",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "10.5.0 "
  }
}
